<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd"
   	xmlns:tx="http://www.springframework.org/schema/tx" 
	xmlns:jpa="http://www.springframework.org/schema/data/jpa">

		<context:annotation-config/>

		<context:component-scan base-package="com.espindola.lobwebapp.controller"/>
		<context:component-scan base-package="com.espindola.lobwebapp.service.impl"/>
		<context:component-scan base-package="com.espindola.lobwebapp.repository"/>
		
		<jpa:repositories base-package="com.espindola.lobwebapp.repository" />
		
		<!--
		 Configures view for returning JSON to the client	
			
		<bean class="org.springframework.web.servlet.view.json.MappingJacksonJsonView">
			<property name="contentType" value="text/plain"/>
		</bean>
		-->
</beans>