<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%-5p: [%d{MMM-dd HH:mm:ss,SSS}] %c{3} - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/lobwebapp-core.log.txt</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/lobwebapp-core.log-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
		<encoder>
			<pattern>%-5p: [%d{MMM-dd HH:mm:ss,SSS}] %c{3} - %m%n</pattern>
		</encoder>
	</appender>

	<logger name="com.espindola.lobwebapp" level="DEBUG">
		<appender-ref ref="FILE" />
	</logger>

	<logger name="org.springframework.beans" level="INFO" />
	<logger name="org.springframework.beans" level="WARN">
		<appender-ref ref="FILE" />
	</logger>
	<logger name="org.springframework.web" level="INFO" />
	<logger name="org.springframework.web" level="WARN">
		<appender-ref ref="FILE" />
	</logger>

	<logger name="org.codehaus.jackson" level="DEBUG" >
		<appender-ref ref="FILE" />
	</logger>

	<logger name="org.hibernate" level="WARN" >
		<appender-ref ref="FILE" />
	</logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>